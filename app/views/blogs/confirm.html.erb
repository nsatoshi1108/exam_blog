<div class="blogs_panel">
<h1>以下の内容で送信しますか？</h1>

<%= form_with(model: @blog,url: blogs_path,local: true) do |form|%>

  <%= form.hidden_field :name%>
  <%= form.hidden_field :content%>
  <%= form.hidden_field :image_cache%>

  <p>タイトル:<%= @blog.name%></p><br>
  <p>内容:<%= @blog.content%></p><br>
  <p>画像：<%= image_tag(@blog.image)%></p><br>

  <%= form.submit '登録する'%>
<% end%>

<%= form_with(model: @blog, url:new_blog_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "戻る", name: "back" %>
<% end %>

</div>
